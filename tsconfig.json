{
    "compilerOptions": {
        "outDir": "./dist-js",
        "target": "es5",
        "lib": [
            "es6",
            "es2017.string",
            "dom"
        ],
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "./src/**/*"
    ]
}